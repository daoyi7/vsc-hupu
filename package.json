{
  "name": "vsc-hupu",
  "version": "0.0.21",
  "description": "Surfing HUPU On VSC",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "hupu",
    "news",
    "feed"
  ],
  "activationEvents": [
    "onView:Accounts",
    "onView:News",
    "onView:Read"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "hupu",
      "properties": {
        "hupu.accounts": {
          "type": "object",
          "default": {},
          "description": "Accounts"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "VSC-HUPU",
          "title": "HUPU",
          "icon": "resources/logo.svg"
        }
      ]
    },
    "views": {
      "VSC-HUPU": [
        {
          "id": "Accounts",
          "name": "Local Accounts"
        },
        {
          "id": "News",
          "name": "News"
        },
        {
          "id": "Readed",
          "name": "Readed"
        }
      ]
    },
    "commands": [
      {
        "command": "hupu.add-account",
        "title": "Create local account",
        "icon": "$(add)"
      },
      {
        "command": "hupu.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "hupu.read",
        "title": "Readed"
      },
      {
        "command": "hupu.open-link",
        "title": "Open with browser"
      },
      {
        "command": "hupu.delete-account",
        "title": "Delete account"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hupu.add-account",
          "when": "view == Accounts",
          "group": "navigation"
        },
        {
          "command": "hupu.refresh",
          "when": "view == News",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hupu.open-link",
          "when": "viewItem == hupu-article"
        },
        {
          "command": "hupu.delete-account",
          "when": "viewItem == hupu-account"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile-release",
    "pub": "vsce publish",
    "compile-release": "yarn clean ./out && webpack --mode production",
    "compile": "yarn clean ./out && tsc -p ./",
    "watch": "yarn clean ./out && tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "clean": "node_modules/.bin/rimraf"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "@types/request": "^2.48.5",
    "@types/xml2js": "^0.4.5",
    "iconv-lite": "^0.6.2",
    "request": "^2.88.2",
    "xml2js": "^0.4.23"
  },
  "publisher": "codingwell",
  "repository": {
    "type": "git",
    "url": "git@github.com:daoyi7/vsc-hupu.git"
  },
  "icon": "logo.png",
  "license": "MIT"
}
